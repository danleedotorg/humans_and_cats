<%= form_with(model: cat) do |form| %>
  <% if cat.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cat.errors.count, "error") %> prohibited this cat from being saved:</h2>

      <ul>
        <% cat.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_area :name %>
  </div>

  <div>
    <%= form.label :age, style: "display: block" %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.label :breed, style: "display: block" %>
    <%= form.text_field :breed %>
  </div>

  <div>
    <%= form.label :gender, style: "display: block" %>
    <%= form.select :gender, Cat.genders.keys %>
  </div>

  <div>
    <%= form.label :human_ids, 'Add Humans', style: 'display: block;' %>
    <%= form.select :human_ids, options_for_select(@humans.pluck(:name, :id), @cat.humen.pluck(:id)), { include_hidden: false },  multiple: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
